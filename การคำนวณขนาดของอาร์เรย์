#include <stdio.h>

// ฟังก์ชันสำหรับแสดงค่าทั้งหมดใน Array
void print_array(int arr[], int size) {
    // ใช้ลูปเพื่อแสดงค่าทีละตัวใน Array
    for(int i = 0; i < size; i++) {
        printf("Element at index %d: %d\n", i, arr[i]);
    }
}

// ฟังก์ชันหลัก (main) ที่จะเรียกใช้งานฟังก์ชัน print_array
int main() {
    // ประกาศตัวแปรอาร์เรย์ (Array) ที่เก็บจำนวนเต็ม 5 ตัว
    int my_array[] = {10, 20, 30, 40, 50};
    
    // คำนวณขนาดของอาร์เรย์
    int size = sizeof(my_array) / sizeof(my_array[0]);
    
    // เรียกใช้ฟังก์ชันเพื่อแสดงค่าในอาร์เรย์
    print_array(my_array, size);
    
    return 0;
}
